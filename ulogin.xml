<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">

	<name>COM_ULOGIN</name>
	<author>uLogin Team</author>
	<authorEmail>team@ulogin.ru</authorEmail>
	<authorUrl>ulogin.ru</authorUrl>
	<license>GNU General Public License, version 2</license>
	<version>2.0.1</version>
	<description>COM_ULOGIN_DESC_SHORT</description>

    <scriptfile>script.php</scriptfile>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="components/com_ulogin">
		<filename>index.html</filename>
        <filename>controller.php</filename>
        <filename>ulogin.php</filename>
        <folder>models</folder>
        <folder>js</folder>
	</files>

	<administration>
		<menu>COM_ULOGIN_MENU</menu>
		<files folder="administrator/components/com_ulogin">
			<filename>index.html</filename>
			<filename>ulogin.php</filename>
            <filename>config.xml</filename>
            <filename>access.xml</filename>
			<folder>sql</folder>
		</files>
        <languages folder="administrator/language">
            <language tag="ru-RU">ru-RU/ru-RU.com_ulogin.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_ulogin.ini</language>
            <language tag="ru-RU">ru-RU/ru-RU.com_ulogin.sys.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_ulogin.sys.ini</language>
        </languages>
	</administration>

    <modules>
        <module module="mod_ulogin_panel" client="site" />
        <module module="mod_ulogin_accounts" client="site" />
    </modules>

    <plugins>
        <plugin plugin="ulogin" group="authentication" />
    </plugins>

</extension>
