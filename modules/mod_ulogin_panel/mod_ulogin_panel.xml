<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
    client="site">
	<name>mod_ulogin_panel</name>
    <author>uLogin Team</author>
    <license>GNU General Public License, version 2</license>
    <authorEmail>team@ulogin.ru</authorEmail>
    <authorUrl>ulogin.ru</authorUrl>
    <version>2.0.2</version>
	<description>MOD_ULOGIN_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_ulogin_panel">mod_ulogin_panel.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

    <languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.mod_ulogin_panel.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.mod_ulogin_panel.sys.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_ulogin_panel.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_ulogin_panel.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="uloginid"
					type="text"
					default=""
					label="MOD_ULOGIN_FIELD_ULOGINID_LABEL"
					description="MOD_ULOGIN_FIELD_ULOGINID_DESC">
				</field>
            </fieldset>
        </fields>
	</config>
</extension>
